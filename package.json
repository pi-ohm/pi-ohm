{
  "name": "pi-ohm",
  "version": "0.2.0",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "description": "Pi Ohm monorepo: focused Amp-inspired workflows for Pi",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "pi",
    "pi-coding-agent",
    "pi-package",
    "ohm",
    "handoff",
    "subagents",
    "thread-search",
    "imagegen",
    "amp",
    "ampcode"
  ],
  "files": [
    "extensions/",
    "packages/",
    "src_legacy/",
    "AGENTS.md",
    "README.md",
    "LICENSE",
    "tsconfig.json"
  ],
  "pi": {
    "extensions": [
      "./node_modules/@juanibiapina/pi-extension-settings/dist/index.js",
      "./extensions"
    ]
  },
  "scripts": {
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@juanibiapina/pi-extension-settings": "^0.5.0",
    "zod": "^4"
  },
  "devDependencies": {
    "@mariozechner/pi-coding-agent": "^0.52.0",
    "@mariozechner/pi-tui": "^0.52.0",
    "@types/node": "^24.3.1",
    "typescript": "^5.9.3"
  }
}
