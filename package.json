{
  "name": "pi-ohm-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "Pi Ohm monorepo: focused Amp-inspired workflows for Pi",
  "keywords": [
    "handoff",
    "imagegen",
    "ohm",
    "pi",
    "pi-coding-agent",
    "pi-ohm",
    "pi-package",
    "subagents",
    "thread-search"
  ],
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "extensions/",
    "packages/",
    "src_legacy/",
    "AGENTS.md",
    "README.md",
    "LICENSE",
    "tsconfig.json"
  ],
  "type": "module",
  "scripts": {
    "release:dev": "node --experimental-strip-types ./scripts/publish-packages.ts --channel dev",
    "release:latest": "node --experimental-strip-types ./scripts/publish-packages.ts --channel latest",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "oxlint": "oxlint --tsconfig tsconfig.json --type-aware",
    "lint": "yarn oxlint -- .",
    "lint:fix": "yarn oxlint -- --fix .",
    "oxfmt": "oxfmt --write",
    "format": "yarn oxfmt -- .",
    "format:check": "yarn oxfmt -- --check .",
    "hooks:install": "lefthook install",
    "postinstall": "sh -c 'if [ -d .git ]; then lefthook install; fi'"
  },
  "dependencies": {
    "@juanibiapina/pi-extension-settings": "^0.5.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@mariozechner/pi-coding-agent": "catalog:pi",
    "@mariozechner/pi-tui": "catalog:pi",
    "@types/node": "^24.3.1",
    "lefthook": "^2.1.1",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "oxlint-tsgolint": "^0.14.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@4.12.0",
  "pi": {
    "extensions": [
      "./node_modules/@juanibiapina/pi-extension-settings/dist/index.js",
      "./extensions"
    ]
  }
}
