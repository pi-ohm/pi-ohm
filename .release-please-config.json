{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "include-component-in-tag": true,
  "include-v-in-tag": true,
  "separate-pull-requests": false,
  "plugins": ["node-workspace"],
  "packages": {
    "packages/config": {
      "package-name": "@pi-phm/config"
    },
    "packages/modes": {
      "package-name": "@pi-ohm/modes"
    },
    "packages/handoff": {
      "package-name": "@pi-phm/handoff"
    },
    "packages/subagents": {
      "package-name": "@pi-phm/subagents"
    },
    "packages/session-search": {
      "package-name": "@pi-phm/session-search"
    },
    "packages/painter": {
      "package-name": "@pi-phm/painter"
    },
    "packages/extension": {
      "package-name": "pi-ohm"
    }
  }
}
